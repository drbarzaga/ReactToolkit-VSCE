{
  "name": "reacttoolkit",
  "displayName": "ReactToolkit",
  "description": "All the essential libraries and tools for React developers delivered in a single extension pack.",
  "publisher": "drbarzaga",
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "##403f3f",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/drbarzaga/ReactToolkit-VSCE"
  },
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other",
    "Extension Packs"
  ],
  "keywords": [
    "react",
    "frontend",
    "toolkit",
    "extension",
    "pack",
    "libraries",
    "tools",
    "essential",
    "curated",
    "development",
    "web",
    "javascript",
    "typescript"
  ],
  "activationEvents": [
    "onCommand:react-toolkit.showResources"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "react-toolkit.showResources",
        "title": "ReactToolkit"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "react-toolkit-sidebar",
          "title": "React Toolkit",
          "icon": "media/toolkit-icon.svg"
        }
      ]
    },
    "views": {
      "react-toolkit-sidebar": [
        {
          "type": "webview",
          "id": "react-toolkit",
          "name": "Resources"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "lucide": "^0.471.0"
  },
  "license": "LICENSE.md"
}
